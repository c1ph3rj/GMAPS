<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.MapsFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">



    </androidx.fragment.app.FragmentContainerView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/locateMeBtn"
            android:layout_width="@dimen/val_50dp"
            android:layout_height="@dimen/val_50dp"
            android:textAlignment="center"
            app:cornerRadius="@dimen/val_180dp"
            app:icon="@drawable/location_ic"
            app:iconGravity="textTop"
            app:iconSize="@dimen/val_25dp"
            app:iconTint="@null"
            android:backgroundTint="?attr/color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.951"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.975" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Navigate"
            android:layout_width="@dimen/val_50dp"
            android:layout_height="@dimen/val_50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon="@drawable/directions_ic"
            android:textAlignment="center"
            app:cornerRadius="@dimen/val_180dp"
            app:iconTint="@null"
            app:iconSize="@dimen/val_25dp"
            app:iconGravity="top"
            android:backgroundTint="?attr/color"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.885" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>



